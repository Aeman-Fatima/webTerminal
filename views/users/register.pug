extends ../layout

block content
    .main
        h1 Signup
        form(action="/register",method="post")
                .form-group
                    label(for="name") Name
                    input#name(type="text", class="form-control", name="name", placeholder="Enter Alphabets Only", required)
                .form-group
                    label(for="email") Email
                    input#email(type="email", class="form-control", name="email", required)
                .form-group
                    label(for="password") Password
                    input#price(type="password", class="form-control", name="password", minlength="8", required)
                .form-group
                    label(for="gender") Gender
                    select(class="form-control")
                        each val in ["Female", "Male", "Other"]
                            option=val
                input(type="submit", class="btn btn-info" value="Register")

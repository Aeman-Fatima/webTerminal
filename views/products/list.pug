extends ../layout

block content
    .main
        .row
            .col-sm-8
                h1=title
            .col-sm-4
                a(href="/products/add", class="btn btn-success float-right") Add New Product
        table.table
            thead
                tr
                    th Name
                    th Price
                    th Discription
                    th Rating
                    th Actions

            tbody
                each product in products
                    tr
                        td=product.name
                        td=product.price
                        td=product.discription
                        td
                            fieldset(class="rating")
                                if product.rating > 0
                                    label(class="full")
                                else
                                    label(class="empty")
                                if product.rating > 1
                                    label(class="full")
                                else
                                    label(class="empty")
                                if product.rating > 2
                                    label(class="full")
                                else
                                    label(class="empty")
                                if product.rating > 3
                                    label(class="full")
                                else
                                    label(class="empty")
                                if product.rating > 4
                                    label(class="full") 
                                else
                                    label(class="empty")  
                                
                        td
                            a(href="/products/delete/"+product._id, class="btn btn-danger") Delete
                            a(href="/products/edit/"+product._id, class="btn btn-warning") Edit
                            a(href="/products/cart/"+product._id, class="btn btn-info") Add To Cart
                        
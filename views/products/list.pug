extends ../layout

block content
    .main
        .row
            .col-sm-8
                h1=title
            .col-sm-4
                a(href="/products/add", class="btn btn-success float-right") Add New Product
        table.table
            thead
                tr
                    th Name
                    th Price
                    th Ratings
                    th Actions
            tbody
                each product in products
                    tr
                        td=product.name
                        td=product.price
                        td=product.rating
                        td
                            a(href="/products/delete/"+product._id, class="btn btn-del") Delete
                            a(href="/products/edit/"+product._id, class="btn btn-edit") Edit
                            a(href="/products/cart/"+product._id, class="btn btn-cart") Add To Cart